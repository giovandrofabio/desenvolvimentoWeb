<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Pos Java EAD - Desenvolvimento de Aplicacoes WEB - Sample App</display-name>

  <servlet>
    <servlet-name>FazendaController</servlet-name>
    <servlet-class>br.edu.unoesc.controller.FazendaController</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ListaFazendaController</servlet-name>
    <servlet-class>br.edu.unoesc.controller.ListaFazendaController</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ExcluirFazendaController</servlet-name>
    <servlet-class>br.edu.unoesc.controller.ExcluirFazendaController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FazendaController</servlet-name>
    <url-pattern>/fazenda</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ListaFazendaController</servlet-name>
    <url-pattern>/listarfazendas</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ExcluirFazendaController</servlet-name>
    <url-pattern>/excluirfazenda</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AnimalController</servlet-name>
    <servlet-class>br.edu.unoesc.controller.AnimalController</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ListaAnimalController</servlet-name>
    <servlet-class>br.edu.unoesc.controller.ListaAnimalController</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ExcluirAnimalController</servlet-name>
    <servlet-class>br.edu.unoesc.controller.ExcluirAnimalController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AnimalController</servlet-name>
    <url-pattern>/animal</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ListaAnimalController</servlet-name>
    <url-pattern>/listaranimais</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ExcluirAnimalController</servlet-name>
    <url-pattern>/excluiranimal</url-pattern>
  </servlet-mapping>
</web-app>
